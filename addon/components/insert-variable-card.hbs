{{#if this.showCard}}
  <AuCard @flex={{true}} @divided={{true}} @isOpenInitially={{true}} @expandable={{true}} @shadow={{true}} @size="small" as |c|>
    <c.header>
      <AuHeading @level="3" @skin="6">
        {{t "insert.variable"}}
      </AuHeading>
    </c.header>
    <c.content>
      <PowerSelect
        @allowClear={{false}}
        @searchEnabled={{false}}
        @options={{this.variablesArray}}
        @selected={{this.selectedVariable}}
        @onChange={{this.updateSelectedVariable}} as |variable|
      >
        {{variable.label}}
      </PowerSelect>
      {{#if this.hasSubtype}}
        <PowerSelect
          @allowClear={{false}}
          @searchEnabled={{false}}
          @options={{this.subtypes}}
          @selected={{this.selectedSubtype}}
          @onChange={{this.updateSubtype}} as |subtype|
        >
          {{subtype.label}}
        </PowerSelect>
      {{/if}}
      <AuButton {{on 'click' this.insert}} @disabled={{or (not this.selectedVariable) (and this.hasSubtype (not this.selectedSubtype))}}>{{t "insert.button"}}</AuButton>
    </c.content>
  </AuCard>
{{/if}}

